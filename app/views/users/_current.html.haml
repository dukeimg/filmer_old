.container-fluid
  .row.container-margin
    .col-xs-12.text-center
      =link_to('#') do
        =image_tag @user.avatar.url(:medium), :class => 'avatar'
      .user-info
        %h1 #{@user.name}
        %i @#{@user.username}
      .container-margin
        =link_to t('edit'), edit_user_registration_path, :class => 'btn btn-default'
.popup
  .popup-inner#popup
    =render('users/avatar')