-title(t('users.sign-in'))
.flexbox.flex-center.container-margin-lg
  .mdl-card.mdl-shadow--2dp
    .mdl-card__title.mdl-card--border
      .mdl-card__title-text= t('users.sign-in')
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.block-center
        = f.label :username, t('users.username'), :class => 'mdl-textfield__label'
        = f.text_field :username, :class => "mdl-textfield__input"
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.block-center
        = f.label :password, t('users.password'), :class => 'mdl-textfield__label'
        = f.password_field :password, :class => "mdl-textfield__input"
      .text-right.mdl-card__supporting-text
        = render "devise/shared/links"
      .mdl-card__actions
        = f.submit t("users.sign-in"), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'
    .container-margin
      .text-center= t('or')
    .mdl-card__title.mdl-card--border
      .mdl-card__title-text= t('users.sign-up')
    .mdl-card__actions.container-margin.text-center
      =link_to t('users.be-number')+(User.count+1).to_s, new_registration_path(resource_name), :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent'