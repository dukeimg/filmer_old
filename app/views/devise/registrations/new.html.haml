.container-fullscreen.flexbox.flex-center
  .container
    .row.text-center
      %h1= t('users.sign-up')
      = form_for resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"} do |f|
        .form-group
          %label.col-sm-6.text-right.control-label{:for => 'name'}= t('users.what-is-your-name')
          .col-sm-6
            = f.text_field :name, :placeholder => t("users.name"), :class => "form-control"
        .form-group
          %label.col-sm-6.text-right.control-label{:for => 'username'}= t('users.choose-an-username')
          .col-sm-6
            = f.text_field :username, :placeholder => t("users.username"), :class => "form-control"
        .form-group
          %label.col-sm-6.text-right.control-label{:for => 'email'}= t('users.email')
          .col-sm-6
            = f.email_field :email, :placeholder => t("users.email"), :class => "form-control"
        .form-group
          %label.col-sm-6.text-right.control-label{:for => 'password'}= t('users.password')
          .col-sm-6
            = f.password_field :password,
               :placeholder => "#{t('users.password-length')} #{@minimum_password_length} #{t('users.symbols')}",
               :class => "form-control",
               autocomplete: "off"
        .form-group
          %label.col-sm-6.text-right.control-label{:for => 'password'}= t('users.password-again')
          .col-sm-6
            = f.password_field :password_confirmation, :placeholder => t("users.password"), :class => "form-control", autocomplete: "off"
        = f.submit t("users.sign-up"), :class => "btn btn-default"