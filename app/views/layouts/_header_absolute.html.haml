%header.navbar.navbar-default{:style => 'position: absolute; top: 0;'}
  .container-fluid
    .navbar-header
      %a.navbar-brand{ :href => root_path}
        .logo-brand= t('Filmer')
    %nav
      %ul.nav.navbar-nav
      %ul.nav.navbar-nav.navbar-right
        -if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{:href => '#', :type => 'button', 'data-toggle' => "dropdown", 'aria-haspopup' => "true", :style => 'padding: 0 15px'} #{image_tag current_user.avatar.url(:thumb), :class => 'avatar'} #{current_user.name} <span class='caret'></span>
            %ul.dropdown-menu
              %li
                =link_to t('suggest'), beta_path
              %li
                %a{ :href => destroy_user_session_path, :method => :delete}= t('users.sign-out')
                =link_to t('users.profile'), current_user
        -else
          %li
            %a{ :href => new_user_session_path}= t('users.sign-in')