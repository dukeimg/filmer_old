%header.navbar.navbar-default
  .container-fluid
    .navbar-header
      %a.navbar-brand{ :href => root_path}
        .logo-brand= t('Filmer')
    %nav
      %ul.nav.navbar-nav
      %ul.nav.navbar-nav.navbar-right
        %li
          =link_to t('suggest'), beta_path
        -if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{:href => '#', :type => 'button', 'data-toggle' => "dropdown", 'aria-haspopup' => "true"} #{image_tag current_user.avatar_link} #{current_user.name} <span class='caret'></span>
            %ul.dropdown-menu
              %li
                %a{ :href => destroy_user_session_path, :method => :delete}= t('sign-out')
                =link_to t('profile'), current_user
        -else
          %li
            %a{ :href => new_user_session_path}= t('sign-in')